<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="org.zinemanager.gui.controller.zineinventory.singleeditor.SingleZineListEditorController">
   <children>
      <Label fx:id="lTitle" minHeight="-Infinity" minWidth="-Infinity" text="Zineliste hinzufügen">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0">
         <children>
            <HBox minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" text="Zineliste:" />
                  <TextField fx:id="tfName" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox minHeight="-Infinity" minWidth="-Infinity" spacing="20.0">
               <children>
                  <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity">
                     <children>
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="Ausgewählte:">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <ScrollPane minHeight="-Infinity" minWidth="-Infinity">
                           <content>
                              <ListView fx:id="lvSelectedZines" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" />
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0">
                     <children>
                        <Button fx:id="btAddZine" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addZine" prefHeight="30.0" prefWidth="100.0" text="Hinzufügen" />
                        <Button fx:id="btRemoveZine" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#removeZine" prefHeight="30.0" prefWidth="100.0" text="Entfernen" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="Mögliche:">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <ScrollPane minHeight="-Infinity" minWidth="-Infinity">
                           <content>
                              <ListView fx:id="lvPotentialZines" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" />
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0">
         <children>
            <Button fx:id="btProgress" mnemonicParsing="false" onAction="#progress" prefHeight="30.0" prefWidth="250.0" text="Hinzufügen" VBox.vgrow="ALWAYS" />
            <Button fx:id="btBack" mnemonicParsing="false" onAction="#back" prefHeight="30.0" prefWidth="250.0" text="Abbrechen" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
